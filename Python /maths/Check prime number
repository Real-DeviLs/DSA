#include <stdio.h>
int main()
{
   int i, num, p = 0;
   printf("enter a number: \n");
   scanf("%d", &num);
   for(i=1; i<=num; i++)
   {
      if(num%i==0)
      {
         p++;
      }
   }
   if(p==2)
   {
      printf("%d is prime",num);
   }
   else
   {
      printf("%d is non prime",num);
   }
   getch();
   return 0;
}
